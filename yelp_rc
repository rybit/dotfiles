SFX_AUTH_TOKEN='Yzk63RmHoiwHDfMutkPLAg'

function dev() {
  if [ $# -eq 0 ]; then
    number=5
    cluster='c'
  fi

  if [ $# -eq 1 ]; then
    number=`echo $1 | rev | cut -b 2- | rev`
    cluster=`echo $1 | rev | cut -b 1`
  fi

  if [ $# -eq 2 ]; then
    number=$1
    cluster=$2
  fi

  ssh -A dev$number-dev$cluster
}

function yclone() {
  [ $# -eq 1 ] || { echo "Must provide a repo to clone"; return 1; }
  git clone git@git.yelpcorp.com:$1
}

function ls_synapse() {
  ls /var/run/synapse/services/$1*
}

function cat_synapse() {
  cat /var/run/synapse/services/$1* | jq -r .
}
