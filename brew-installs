# dev languages
brew install go node python
brew install rbenv ruby-install

# DB crap
brew install sqlite mongodb postgres

# docker crap
brew cask install virtualbox
brew install docker docker-machine

# installing macvim
brew reinstall macvim --HEAD --with-luajit --with-custom-icons --with-override-system-vim

# netlify things
brew install dns-masq

