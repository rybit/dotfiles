ln -s `pwd`/shared_rc ~/.shared_rc
ln -s `pwd`/mac_profile ~/.profile
ln -s `pwd`/vimrc ~/.vimrc

mkdir -p ~/.vim/bundle
mkdir -p ~/.vim/colors
mkdir -p ~/.vim/backup
mkdir -p ~/.vim/temp
